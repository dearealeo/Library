---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Ruleset Documentation">
  <div class="content">
    <p><a href="/Library/">Back to Index</a></p>
    <h1>Ruleset Documentation</h1>
    
    <div class="description">
      <p>Welcome to the Ruleset documentation section.</p>
      <p>This section contains various rule configurations and documentation for network filtering and routing.</p>
    </div>

    <div class="links">
      <a href="/Library/sukka-ruleset/" class="button">View Sukka Ruleset</a>
    </div>
  </div>
</BaseLayout>

<style>
  .content {
    max-width: 900px;
    margin: 0 auto;
    padding: 20px;
  }

  .content p:first-child {
    margin-bottom: 30px;
  }

  .content a {
    text-decoration: none;
    color: var(--color-secondary);
    font-weight: 500;
    transition: all 0.2s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .content a:hover {
    color: var(--color-primary);
    transform: scale(1.1);
  }

  .description {
    padding: 30px 20px;
    text-align: center;
    color: var(--color-secondary);
    background: var(--color-bg);
    border-radius: 8px;
    border: 1px solid var(--color-border);
    margin-bottom: 30px;
  }

  .description p {
    margin: 10px 0;
    line-height: 1.6;
  }

  h1 {
    color: var(--color-primary);
    margin-bottom: 30px;
  }

  .links {
    text-align: center;
  }

  .button {
    display: inline-block;
    padding: 12px 24px;
    background: var(--color-badge-bg);
    border: 1px solid var(--color-border);
    border-radius: 5px;
    font-weight: 500;
  }

  .button:hover {
    background: var(--color-border);
    border-color: var(--color-secondary);
    transform: translateY(-1px);
  }
</style>
